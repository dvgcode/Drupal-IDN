{#
/**
 * @file
 * Olivero's theme override to display the footer bottom region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}

{%
  set classes = [
    'region',
    'region--' ~ region|clean_class,
    'grid-full',
    'layout--pass--content-medium',
  ]
%}

<script>
const langSelect = document.querySelector(".lang-dropdown-select-element");
window.onload = langSelect.addEventListener("change", (event)=>{
  
  if(langSelect.value == 'hi'){
    alert('Redirecting to Hindi Page');
    document.location.assign("http://xn--p1b6ci4b4b3a.xn--h2brj9c/Drupal-IDN/web/hi/");    
    alert('http://xn--p1b6ci4b4b3a.xn--h2brj9c/Drupal-IDN/web/hi/');
  }else{
    alert('Redirecting to English Page');
    document.location.assign("http://example.com/Drupal-IDN/web/en-gb/");
    alert('http://example.com/Drupal-IDN/web/en-gb/');
  }

});
</script>

{% if content %}
  <div{{ attributes.addClass(classes) }}>
    {{ content }}
  </div>
{% endif %}